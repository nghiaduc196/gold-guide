                {% else %}
                  <img class="w-100" src="/{{ directory ~'/images/default-spot-guide.png' }}"/>
                {% endif %}
              </a>
            </div>
            <div class="body-text">
              <span>プラン4</span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

